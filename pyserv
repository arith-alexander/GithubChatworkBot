# chkconfig: 345 99 01
# description: Launch python in-built server. Copy this to /etc/init.d and launch "chkconfig --add pyserv".

PATH=~/.pyenv/shims:/usr/local/bin:/usr/bin:/bin:/sbin:/bin:/usr/bin:/usr/sbin
start(){
	cd /usr/scripts/GithubChatworkBot/backend/; python server.py > /dev/null 2>&1 &
	cd /usr/scripts/GithubChatworkBot/frontend/; python server.py > /dev/null 2>&1 &
	return 0
}

case "$1" in
    start)
	start
	;;
    *)
      	echo $"Usage: $0 {start}"
esac

exit 0
